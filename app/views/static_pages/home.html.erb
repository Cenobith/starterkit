<% if signed_in? %>
    <div class="row">
      <div class="jumbotron center">
        <h1>Hello, <%= nickname_for(current_user) %>!</h1>
      </div>
    </div>
<% else %>
    <div class="row">
      <div class="jumbotron center">
        <h1><%= t('welcome') %></h1>

        <%= link_to t('signup_now'), new_user_registration_path,
                    class: "btn btn-large btn-primary" %>
      </div>

    </div>
<% end %>
