<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <div class="navbar-header">
        <div class="navbar-brand">
          <%= link_to Starterkit::Application.config.title, root_path, id: "logo" %>
        </div>
      </div>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <!--ul class="nav nav-pills pull-right" -->
          <li><%= link_to root_path, id: "HomeLnk" do%>
                <i class="glyphicon glyphicon-home" aria-hidden="true"></i>
                <%= t('home') %>
                <% end %>
                </li>
          <% if signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <%= userpic_for(current_user, size: 20) %><%= nickname_for(current_user) %>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t('settings'), edit_user_registration_path, id: "SettingsLnk" %></li>
                  <% if !current_user.profile.nil? %>
                      <li><%= link_to t('profile'), edit_profile_path(current_user.profile.id), id: "EditProfile" %></li>
                  <% end %>
                  <% if current_user.admin? %>
                      <li><%= link_to t('admin_panel'), rails_admin_path %></li>
                  <% end %>
                  <li class="divider"></li>
                  <li>
                    <%= link_to t('signout'), destroy_user_session_path, method: "delete", id: "SignOutLnk" %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to t('signin'), new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>