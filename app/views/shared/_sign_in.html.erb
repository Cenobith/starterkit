<div class="modal hide fade in" id="sign_in">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">x</button>
    <h2>Sign in</h2>
  </div>

  <div class="modal-body">
    <%= simple_form_for(User.new, url: session_path(:user),
                        html:{id: 'sign_in_user', :'data-type' => 'json'}, remote: true) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if Devise.mappings[:user].rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
    <% end %>

    <!-- %= render "devise/shared/links" % -->
  </div>
  <div class="modal-footer"></div>
</div>